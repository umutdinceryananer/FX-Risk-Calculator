# Application environment (development | production)
APP_ENV=development

# Flask runtime configuration
FLASK_RUN_HOST=127.0.0.1
FLASK_RUN_PORT=5000

# Security
SECRET_KEY=change-this-secret

# Database configuration
DATABASE_URL=sqlite:///fx-risk-calculator.db

# Scheduler
SCHEDULER_TIMEZONE=UTC

# HTTP client defaults
REQUEST_TIMEOUT_SECONDS=5

FX_RATE_PROVIDER=mock
RATES_API_BASE_URL=https://api.exchangerate.host
RATES_API_MAX_RETRIES=3
RATES_API_BACKOFF_SECONDS=0.5
FRANKFURTER_API_BASE_URL=https://api.frankfurter.app
FRANKFURTER_API_MAX_RETRIES=3
FRANKFURTER_API_BACKOFF_SECONDS=0.5
FX_CANONICAL_BASE=USD

FX_FALLBACK_PROVIDER=frankfurter_ecb

SCHEDULER_ENABLED=true
RATES_REFRESH_CRON=0 */1 * * *
